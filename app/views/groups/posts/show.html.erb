
<%= turbo_frame_tag "posts" do %>
  <%= turbo_frame_tag "comments" do %>

    <div class="w-full">
      <div id="<%= dom_id @post %>" class="mt-4">
        <h1 class="font-bold text-2xl"><%= @post.title %></h1>
        <p class="text-gray-400">
          <%= @post.description %>
        </p>
    </div>
    <div>

      <p class="font-semiboldmt-5">
        Updated about <%= time_tag(@post.updated_at, 'data-local': 'time-ago') %>
      </p>
      <%= render CommentButtonComponent.new record: @post, current_user: current_user %>
    </div>
    <%= render CommentComponent.with_collection @post.direct_comments, current_user: current_user %>
  <% end %>
<% end %>

