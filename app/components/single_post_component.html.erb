<%= link_to  url_for([@post.group, @post]) , data: { turbo_action: 'advance' } do%>
  <div class="p-4 w-full">
    <div class="flex justify-between w-full items-center">
      <div>
        <h1 class="font-bold text-2xl"> <%= @post.title %> </h1>
        <p class="truncate"> <%= @post.description %> </p>
        <p class="text-sm font-light"> created_by: <%= created_by%> </p>
        <div class="flex mt-3">

        <p class="text-base font-medium mr-3"> Last Updated on <%= time_tag @post.updated_at, 'data-local': 'time-ago' %> </p>
        </div>
      </div>

      <div>
        <div class="daisy-btn-group">
          <% post_button.each do |link| %>
            <%= link %>
          <% end %>

        </div>
      </div>
    </div>

  </div>

<% end %>

<hr/>
